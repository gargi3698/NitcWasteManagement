<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/app_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupervisorSignUpPage">


    <EditText
        android:id="@+id/supervisornamesignup"
        android:layout_width="327dp"
        android:layout_height="57dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rectangle_edit_text"

        android:ems="10"
        android:hint="Enter Name"
        android:textColor="@color/black"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toTopOf="@+id/supervisoremailid"
        app:layout_constraintEnd_toEndOf="@+id/supervisoremailid"
        app:layout_constraintStart_toStartOf="@+id/supervisoremailid"
        app:layout_constraintTop_toBottomOf="@+id/signuptext" />

    <TextView
        android:id="@+id/supervisortext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="87dp"
        android:layout_marginTop="28dp"
        android:text="Supervisor"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="44dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/signuptext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/supervisorphonenosignup"
        android:layout_width="327dp"
        android:layout_height="57dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rectangle_edit_text"
        android:ems="10"
        android:hint="Enter MobileNo"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/supervisorpassword" />

    <EditText
        android:id="@+id/supervisoremailid"
        android:layout_width="327dp"
        android:layout_height="57dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rectangle_edit_text"
        android:textColor="@color/black"
        android:ems="10"
        android:hint="Enter EmailId"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toTopOf="@+id/supervisorpassword"
        app:layout_constraintEnd_toEndOf="@+id/supervisorpassword"
        app:layout_constraintStart_toStartOf="@+id/supervisorpassword"
        app:layout_constraintTop_toBottomOf="@+id/supervisornamesignup" />

    <EditText
        android:id="@+id/supervisorpassword"
        android:layout_width="327dp"
        android:layout_height="57dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/rectangle_edit_text"
        android:ems="10"
        android:hint="Enter Password"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toTopOf="@+id/supervisorphonenosignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/supervisoremailid" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitbuttonsignup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="73dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="49dp"
        android:background="@drawable/rounded_button"
        android:text="Submit"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/signuptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="27dp"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="44dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/supervisornamesignup"
        app:layout_constraintStart_toStartOf="@+id/supervisortext"
        app:layout_constraintTop_toBottomOf="@+id/supervisortext" />

    <Spinner
        android:id="@+id/supervisorlocationid"
        android:layout_width="327dp"
        android:layout_height="57dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="111dp"
        android:background="@drawable/rectangle_edit_text"
        android:ems="10"
        android:hint="Enter Your location"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/submitbuttonsignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/supervisorphonenosignup" />
</androidx.constraintlayout.widget.ConstraintLayout>