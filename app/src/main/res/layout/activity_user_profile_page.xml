<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".UserProfilePage">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="75dp"

        android:layout_marginRight="100dp"
        android:textColor="@color/white"
        android:textSize="44dp"
        android:textStyle="bold"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:elevation="30dp"
        android:src="@drawable/pic"
        android:layout_marginTop="150dp" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginLeft="65dp"
        android:layout_marginTop="315dp"

        android:drawableLeft="@drawable/round_person_24"
        android:drawablePadding="10dp"
        android:text="Username :"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginLeft="65dp"
        android:layout_marginTop="125dp"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="10dp"
        android:text="Email Id :"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/signupuseremailid"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"


        android:layout_marginLeft="65dp"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="209dp"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:drawablePadding="10dp"
        android:text="Mobile No :"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signupusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginTop="350dp"
        android:layout_marginStart="65dp"
        android:text="-_-"
        android:textColor="@color/ligreen"
        android:textStyle="bold"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/signupusermobileno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="543dp"
        android:layout_marginStart="65dp"
        android:text="-_-"
        android:textColor="@color/ligreen"
        android:textStyle="bold"
        android:textSize="22dp"/>

    <TextView
        android:id="@+id/signupuseremailid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="65dp"
        android:layout_marginTop="308dp"
        android:text="-_-"
        android:textColor="@color/ligreen"
        android:textStyle="bold"
        android:textSize="22dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logoutProfile"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="618dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/rounded_button"
        android:text="Logout"
        android:textColor="@color/white" />


</RelativeLayout>
